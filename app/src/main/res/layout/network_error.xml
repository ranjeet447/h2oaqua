<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/network_error_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/refreshImageButton"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp"
        android:text="@string/check_your_internet_connection"
        android:textSize="16sp"/>

    <ImageButton
        android:id="@+id/refreshImageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:background="@color/white"
        android:src="@drawable/ic_refresh_black_48dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/refreshImageButton"
        android:layout_below="@+id/refreshImageButton"
        android:text="@string/refresh"/>

</RelativeLayout>